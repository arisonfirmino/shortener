generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id @default(uuid()) @map("_id")
  name   String
  email  String  @unique
  avatar String?

  urls ShortURL[]

  created_at DateTime @default(now())
  updated_at DateTime

  @@map("users")
}

model ShortURL {
  id          String   @id @default(uuid()) @map("_id")
  originalUrl String
  shortId     String   @unique
  clicks      Int      @default(0)
  created_at  DateTime @default(now())
  expires_at  DateTime

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@map("short_urls")
}
