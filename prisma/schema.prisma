generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id @default(uuid()) @map("_id")
  name   String
  email  String  @unique
  avatar String?

  created_at DateTime @default(now())
  updated_at DateTime

  @@map("users")
}
